@model StudentCrudOperation.Models.User
@{
    ViewBag.Title = "Forgot Password";
}

<div class="row">
    <div class="col-md-7" style="margin-left:28%">
        <section id="loginForm">
            @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h1 class="h3 mb-3 fw-normal" style="margin-left:26%">Reset Password</h1>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group form-floating">
                    @Html.LabelFor(m => m.Email, "Email:", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="Email" })
                        <small>  @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", @style = "position:absolute" })</small>
                    </div>
                </div>
                <div class="form-group form-floating">
                    @Html.LabelFor(m => m.Dob, "DOB:", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Dob, new { htmlAttributes = new { @type = "date", @class = "form-control", @Id = "date" } })
                        <small>@Html.ValidationMessageFor(m => m.Dob, "", new { @class = "text-danger", @style = "position:absolute" })</small>
                    </div>
                </div>
                <div class="form-group form-floating">
                    @Html.LabelFor(m => m.Password, "Password:", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control",@placeholder="Password" })
                        <small>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @style = "position:absolute" })</small>
                    </div>
                </div>
                <div class="form-group form-floating">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Reset" class="btn btn-success" style="margin-left:20%" />
                    </div>

                </div>
                
            }
        </section>
    </div>
</div>