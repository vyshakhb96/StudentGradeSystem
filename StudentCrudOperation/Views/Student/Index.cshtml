@model IEnumerable<MVCLibraries.StudentModel>
<br />
<p>
    @Html.ActionLink("Add New Student", "Create", "Student", new { @class = "btn btn-success" })
</p>

<table id="studtable_id" class="table table-striped table-bordered dt-responsive nowrap">
    <thead style="background-color: #1C2833; color: white">
        <tr>
            <th>Register Number</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Standard</th>
            <th>Mathematics</th>
            <th>Physics</th>
            <th>Chemistry</th>
            <th>Overall Grade</th>
            <th>Actions</th>
        </tr>
    </thead>

</table>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>

<script>

    $(document).ready(function () {
        $('#studtable_id').DataTable({
            "ajax": {
                url: "/Student/GetData",
                type: "POST",
                dataType: "json"
            },
            columns: [
                { 'data': 'Regnum', 'name':"Regnum"},
                { 'data': 'Name', 'name': "Name"  },
                { 'data': 'Dob', 'name': "Dob"},
                { 'data': 'Standard', 'name': "Standard"  },
                { 'data': 'Mathematics', 'name': "Mathematics" },
                { 'data': 'Physics', 'name': "Physics"},
                { 'data': 'Chemistry', 'name': "Chemistry"  },
                { 'data': 'Grade', 'name': "Grade"},
                {
                    'data': 'Id', 'render': function (data) {
                        return '<button class="btn btn-warning"><a href="@Url.Action("Edit","Student")/' + data + '" style="cursor:pointer;text-decoration:none;color:white" data-original-title="Edit">Edit</a></button>  <button onclick="myFunction()" class="btn btn-danger"> <a href="@Url.Action("Delete", "Student")/' + data +'" style="cursor:pointer;text-decoration:none;color:white">Delete</a></button>';
                    }}
            ],
            "serverSide": "true",
            "order": [0, "asc"],
            "processing":"true"
        });


    });

</script>

<script>
    function myFunction() {
        confirm("Are you sure to delete?");
    }
</script>
